{
  "manifest_version": 3,
  "name": "YouTube Stoplight",
  "version": "1.1",

  "description": "Shows YouTube sentiment based off of the likes to view ratio",

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["script.js"]
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
}
